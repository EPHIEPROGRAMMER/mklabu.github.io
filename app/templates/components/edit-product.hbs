{{#if updateProduct}}
  <div>
    <form>
      <div class="">
        <label for="title">Title</label>
        {{input value=title id="title1" placeholder=product.title class="form-control"}}
      </div>

      <div class="">
        <label for="description">Description</label>
        {{textarea cols='80' rows='6' value=description id="description1" placeholder=product.description class="form-control"}}
      </div>

      <div class="">
        <label for="venue">Venue</label>
        {{input value=venue id="venue1" placeholder=product.venue class="form-control"}}
      </div>

      <div class="">
        <label for="image">Image</label>
        {{input value=image id="image1" placeholder=product.image class="form-control"}}
      </div>




      <div class="form-group">
          <label for="latitude">Latitude</label>
            {{input value=latitude id="latitude" class="form-control"}}
          </div>

      <div class="form-group">
          <label for="longitude">Longitude</label>
            {{input value=longitude id="longitude" class="form-control"}}
          </div>


      <button class="btn btn-warning" {{action 'update' product}}>UPDATE CLUB</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-warning" {{action "updateProductFormShow"}}>UPDATE</button>
{{/if}}
